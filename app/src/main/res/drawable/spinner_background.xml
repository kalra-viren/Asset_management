<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
        </shape>
    </item>
</selector>
